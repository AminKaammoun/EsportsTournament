@model IEnumerable<Projet.Net.Models.Equipe>
@{
    ViewData["Title"] = "Index";
}



@if (User.IsInRole("Admin"))
{
<section id="shop-cart-section" class="pt-120 pb-120">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Change from col-lg-8 to col-lg-12 -->
                    <h1>Liste des equipes</h1>
                    <a asp-action="Create" class="cmn-btn"> Create New</a>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NomEquipe)
                                    </th>
                                
                                    <th>
                                        ACTION
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                                <img src="~/img/@Html.DisplayFor(modelItem => item.image)" alt="image" height="80" width="80">
                                            <span>   @Html.DisplayFor(modelItem => item.NomEquipe)</span>
                                        </th>
                                      
                                        <td>
                                           
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
}else{


    <section id="team-section" class="pb-120">
        <div class="overlay pt-120">
            <div class="container wow fadeInUp">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="section-header text-center">
                            <h2 class="title">Rejoindre une équipe</h2>
                         
                        </div>
                    </div>
				</div>
                <div class="row wrapper">
                @foreach (var item in Model)
                {

                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="single-item text-center" style="height: 100%; display: flex; flex-direction: column; justify-content: space-between;">
                                <div class="top-item text-center" style="flex-grow: 1; overflow: hidden;">
                                    <img src="~/img/@Html.DisplayFor(modelItem => item.image)" alt="image" style="width: 100%; height: 100%; object-fit: contain;">
                                </div>
                                <div class="bottom-area">
                                    <a href="#"><h5>@Html.DisplayFor(modelItem => item.NomEquipe)</h5></a>
                                    <a class="cmn-btn" id="join" asp-area="" asp-page="">Rejoindre</a>
                                </div>
                            </div>
                        </div>

                    
               
                } </div>
            </div>
        </div>
    </section>
}
}