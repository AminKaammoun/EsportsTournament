@model Projet.Net.Models.Tournoi

@{
    ViewData["Title"] = "Details";
}




<section id="shop-cart-section" class="pt-120 pb-120">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1 style="color: white;">Details</h1>
                    <h4 style="color: white;">Tournoi</h4>
                    <hr style="color: white;" />
                    <br />
                    <div class="row">
                        <dt class="col-sm-2" style="color: white;">
                            @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-sm-10" style="color: white;">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>
                        <dt class="col-sm-2" style="color: white;">
                            @Html.DisplayNameFor(model => model.Descr)
                        </dt>
                        <dd class="col-sm-10" style="color: white;">
                            @Html.DisplayFor(model => model.Descr)
                        </dd>
                        <dt class="col-sm-2" style="color: white;">
                            @Html.DisplayNameFor(model => model.Jeux)
                        </dt>
                        <dd class="col-sm-10" style="color: white;">
                            @Html.DisplayFor(model => model.Jeux.NomJeu)
                        </dd>
                        <dt class="col-sm-2" style="color: white;">
                            Date Debut de Tournoi
                        </dt>
                        <dd class="col-sm-10" style="color: white;">
                            @String.Format("{0:yyyy-MM-dd}", Model.DateDebut)
                        </dd>
                        <dt class="col-sm-2" style="color: white;">
                            Date Fin de Tournoi
                        </dt>
                        <dd class="col-sm-10" style="color: white;">
                            @String.Format("{0:yyyy-MM-dd}", Model.DateFin)
                        </dd>
                    </div>
                </div>
            </div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" style="color: white;">Edit</a> |
            <a asp-action="Index" style="color: white;">Back to List</a>
        </div>
    </div>
</section>