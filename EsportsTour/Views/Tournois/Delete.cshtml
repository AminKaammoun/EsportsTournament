@model Projet.Net.Models.Tournoi

@{
    ViewData["Title"] = "Delete";
}

<section id="shop-cart-section" class="pt-120 pb-120">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1>Delete</h1>

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Tournoi</h4>
                        <hr />
                        <div class="row">
                            <dt class="col-sm-2" style="color: white;">
                                @Html.DisplayNameFor(model => model.Nom)
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.Nom)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                Description
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.Descr)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                @Html.DisplayNameFor(model => model.Jeux)
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.Jeux.NomJeu)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                Date Debut de Tournoi
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @String.Format("{0:yyyy-MM-dd}", Model.DateDebut)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                Date Fin de Tournoi
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @String.Format("{0:yyyy-MM-dd}", Model.DateFin)
                            </dd>
                        </div>
                    </div>

                    @* Display validation errors *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="text-danger">
                            <h3>@Html.ValidationSummary(false, "Une erreur s'est produite lors de la suppression du Tournois:")</h3>
                        </div>
                    }
                </div>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Delete" style="color:white" class="cmn-btn" /> |
                </div>
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</section>
