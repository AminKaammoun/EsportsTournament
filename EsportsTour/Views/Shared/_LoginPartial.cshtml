@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <a  class="nav-link text-white"  href="#" title="Manage">
        Hello <span style="color: white; font-family:cursive">@UserManager.GetUserName(User)</span>!
    </a>

    
   
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="btn btn-danger" style="color:white;">Logout</button>
        </form>
    
}
else 
                     
{
            <a class="login-bt" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="cmn-btn" id="register" asp-area="Identity" asp-page="/Account/Register">Join Now!</a>
    
}

