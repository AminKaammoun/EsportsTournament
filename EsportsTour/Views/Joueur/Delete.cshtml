@model Projet.Net.Models.Joueur

@{
    ViewData["Title"] = "Delete";
}



<section id="shop-cart-section" class="pt-120 pb-120">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1>Delete</h1>

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Joueur</h4>
                        <hr />
                        <div class="row">
                            <dt class="col-sm-2" style="color: white;">
                                @Html.DisplayNameFor(model => model.Pseudonyme)
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.Pseudonyme)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                Date de Naissance
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @String.Format("{0:yyyy-MM-dd}", Model.DateNaissance)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                @Html.DisplayNameFor(model => model.Equipe)
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.Equipe.NomEquipe)
                            </dd>
                        </div>
                    </div>
                </div>

            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Delete" style="color:white" class="cmn-btn" /> |
                </div>
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
</section>
