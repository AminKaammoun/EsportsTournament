@model Projet.Net.Models.Joueur

@{
    ViewData["Title"] = "Edit";
}


<section id="shop-cart-section" class="pt-120 pb-120">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1>Edit</h1>
                    <h4>Joueur</h4>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="Pseudonyme" class="control-label" style="color:white"></label>
                                    <input asp-for="Pseudonyme" class="form-control" />
                                    <span asp-validation-for="Pseudonyme" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DateNaissance" class="control-label" style="color:white">Date de Naissance</label>
                                    <input asp-for="DateNaissance" class="form-control" type="date" />
                                    <span asp-validation-for="DateNaissance" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EquipeId" class="control-label" style="color:white">Equipe</label>
                                    <select asp-for="EquipeId" class="form-control" asp-items="ViewBag.EquipeId"></select>
                                    <span asp-validation-for="EquipeId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" style="color:white" class="cmn-btn" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>

            </div>
            <a asp-action="Index">Back to List</a>
        </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
