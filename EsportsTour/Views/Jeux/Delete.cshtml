@model EsportsTour.Models.Jeux

@{
    ViewData["Title"] = "Delete";
}



<section id="shop-cart-section" class="pt-120 pb-120">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1>Delete</h1>

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Jeux</h4>
                        <hr />
                        <div class="row">
                            <dt class="col-sm-2" style="color: white;">
                                @Html.DisplayNameFor(model => model.NomJeu)
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.NomJeu)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                @Html.DisplayNameFor(model => model.Categorie)
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.Categorie)
                            </dd>
                            <dt class="col-sm-2" style="color: white;">
                                @Html.DisplayNameFor(model => model.ImgJeu)
                            </dt>
                            <dd class="col-sm-10" style="color: white;">
                                @Html.DisplayFor(model => model.ImgJeu)
                            </dd>
                        </div>
                    </div>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger">
                        <h3>@Html.ValidationSummary(false, "Une erreur s'est produite lors de la suppression du jeux :")</h3>
                    </div>
                }

            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Delete" style="color:white" class="cmn-btn" /> |
                </div>
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
</section>

